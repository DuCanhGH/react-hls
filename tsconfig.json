{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES5",
    "module": "ES2022",
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "removeComments": true,
    "jsx": "react-jsx",
    "strict": true,
    "noImplicitAny": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "./dist"],
  "include": ["src"]
}
