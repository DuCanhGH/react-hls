{
  "name": "@ducanh2912/react-hls-player",
  "version": "3.0.8",
  "description": "A simple and easy to use react component for playing an hls live stream",
  "main": "./dist/index.js",
  "types": "./dist",
  "scripts": {
    "start": "webpack serve --config webpack/webpack.dev.js",
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "prepare": "install-peers",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint \"**/*.{ts,tsx,js,jsx}\"",
    "format": "prettier --write --embedded-language-formatting=auto ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DuCanhGH/react-hls.git"
  },
  "keywords": [
    "hls",
    "rtmp",
    "react",
    "component"
  ],
  "author": "Christopher Short",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DuCanhGH/react-hls/issues"
  },
  "homepage": "https://github.com/DuCanhGH/react-hls#README",
  "dependencies": {
    "hls.js": "1.2.0"
  },
  "peerDependencies": {
    "react": ">=18 | >=17 | >=16",
    "react-dom": ">=18 | >=17 | >=16"
  },
  "devDependencies": {
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "@typescript-eslint/eslint-plugin": "5.32.0",
    "@typescript-eslint/parser": "5.32.0",
    "eslint": "8.21.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx": "0.1.0",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.30.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "html-webpack-plugin": "5.5.0",
    "install-peers-cli": "2.2.0",
    "prettier": "2.7.1",
    "ts-loader": "9.3.1",
    "typescript": "4.7.4",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0",
    "webpack-dev-server": "4.9.3",
    "webpack-merge": "5.8.0"
  }
}
